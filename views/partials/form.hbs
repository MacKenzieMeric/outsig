      <div class="billing">
        <h2 class="billing__heading">2. Billing Info</h2>
        <img class="billing__stripe-logo" src="../images/stripe-light.png">
        <div id="card-element"></div>
        <div class="button__wrapper" id="button-wrapper">
          <button class="checkout__button" id="stripe-button" name="checkout-button">Place Order</button>
          <div id="ghost"></div>
        </div>
      </div>
    </form>
  </div>
  <div class="summary">
    <div class="summary__line-item__tall">
      <span class="summary__line-item__title">Review Order</span>
    </div>
    <div class="summary__line-item__short">
      <span class="summary__line-item__type">Promo Code: {{promo}}</span>
    </div>
    <div class="summary__line-item__short">
      <span class="summary__line-item__type">Subtotal</span>
      <span class="summary__line-item__price">${{subtotal}}</span>
    </div>
    <div class="summary__line-item__short">
      <span class="summary__line-item__type">Sales Tax</span>
      <span class="summary__line-item__price">$0</span>
    </div>
    <div class="summary__line-item__short">
      <span class="summary__line-item__type">Shipping</span>
      <span class="summary__line-item__price">${{shipping}}</span>
    </div>
    <div class="summary__line-item__short">
      <span class="summary__line-item__type">Total</span>
      <span class="summary__line-item__price">${{total}}</span>
    </div>
  </div>
</div>
