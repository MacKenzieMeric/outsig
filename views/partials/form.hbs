        <div class="shipping__input-wrapper" id="g-8">
          <label class="shipping__label">
            <span class="shipping__span">Postal code</span>
            <input class="in shipping__input" id="postal-code" type="text" name="postalCode">
          </label>
        </div>
        <div class="shipping__input-wrapper" id="g-9">
