<div class="checkout">
  <div class="shipping">
    <h2 class="shipping__heading">1. Shipping Info</h2>
    <form id="stripe-form" action="/charge" method="post">
      <div class="shipping__details">
        <div class="shipping__input-wrapper" id="g-1" >
          <label class="shipping__label">
            <span class="shipping__span">First name</span>
            <input class="in shipping__input" id="first-name" type="text" name="firstName">
          </label>
        </div>
        <div class="shipping__input-wrapper" id="g-2">
          <label class="shipping__label">
            <span class="shipping__span">Last name</span>
            <input class="in shipping__input" id="last-name" type="text" name="lastName">
          </label>
        </div>
        <div class="shipping__input-wrapper" id="g-3">
          <label class="shipping__label">
            <span class="shipping__span">Address</span>
            <input class="in shipping__input" id="address-line-1" type="text" name="addressLine1">
          </label>
        </div>
        <div class="shipping__input-wrapper" id="g-4">
          <label class="shipping__label">
            <span class="shipping__span">Address 2</span>
