{{#with article}}
  <div class="post">
    <div class="post__wrapper">
      <div class="post__header">
        <div class="post__details">
          <h1 class="post__title">{{this.title}}</h1>
          <h2 class="post__subtitle">{{this.subtitle}}</h2>
        </div>
        <div class="post__author">
          <img class="post__author-image" src={{this.image}} alt="">
          <span class="post__author-name">{{this.author}}</span>
          <span class="post__date">{{this.date}}</span>
        </div>
      </div>
      <div class="post__banner">
        <img class="post__banner-image" src={{this.bannerImage}} alt="">
      </div> 
      <p class="post__body">{{this.body}}</p>
    </div>
    <div id="commento"></div>
  </div>
{{/with}}

                            
  